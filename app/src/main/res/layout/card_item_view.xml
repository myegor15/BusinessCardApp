<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:id="@+id/cardItem_linearLayout">

    <ImageView
        android:id="@+id/image_cardItemView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personName_cardItemView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мельничук Єгор Юрійович"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/organisationName_cardItemView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Одеський Національний Політехнічний Університет"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>