<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="myCardEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>

    <style name="myCardSmallImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="cardDialogTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
    </style>

    <style name="cardDialogTextViewStyle.Link">
        <item name="android:linksClickable">true</item>
    </style>

    <style name="cardDialogTextViewStyle.Link.Phone">
        <item name="android:autoLink">phone</item>
    </style>

    <style name="cardDialogTextViewStyle.Link.Email">
        <item name="android:autoLink">email</item>
    </style>

    <style name="cardDialogTextViewStyle.Link.Web">
        <item name="android:autoLink">web</item>
    </style>

    <style name="loginActivityStyle">
        <item name="android:layout_width">@dimen/loginActivity_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>

    <style name="loginActivityStyle.EditText">
        <item name="android:background">@drawable/edit_text_style</item>
    </style>

    <style name="loginActivityStyle.Button">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="editTextSearchActivityStyle">
        <item name="android:background">@drawable/edit_text_white</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorSilver</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
